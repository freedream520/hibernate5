<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" 
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
			 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="sakila" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>com.mycompany.hibernate5.sakila.domain.Actor</class>
    <class>com.mycompany.hibernate5.sakila.domain.Payment</class>
    <class>com.mycompany.hibernate5.sakila.domain.Store</class>
    <class>com.mycompany.hibernate5.sakila.domain.Address</class>
    <class>com.mycompany.hibernate5.sakila.domain.FilmText</class>
    <class>com.mycompany.hibernate5.sakila.domain.Customer</class>
    <class>com.mycompany.hibernate5.sakila.domain.FilmCategory</class>
    <class>com.mycompany.hibernate5.sakila.domain.Film</class>
    <class>com.mycompany.hibernate5.sakila.domain.Inventory</class>
    <class>com.mycompany.hibernate5.sakila.domain.Country</class>
    <class>com.mycompany.hibernate5.sakila.domain.City</class>
    <class>com.mycompany.hibernate5.sakila.domain.Rental</class>
    <class>com.mycompany.hibernate5.sakila.domain.Staff</class>
    <class>com.mycompany.hibernate5.sakila.domain.FilmActor</class>
    <class>com.mycompany.hibernate5.sakila.domain.Category</class>
    <class>com.mycompany.hibernate5.sakila.domain.Language</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sakila?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="test1234"/>
	  <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
